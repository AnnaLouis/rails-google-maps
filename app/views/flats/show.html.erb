<div class="row-fluid">
  <div class="col-md-4 col-md-offset-4">
    <div class="row">
      <h2><%= @flat.name %></h2>
      <p><%= @flat.address %></p>
      <p>Latitude: <%= @flat.latitude %></p>
      <p>Longitude: <%= @flat.longitude %></p>

      <%= link_to "Edit", edit_flat_path(@flat), class: "btn btn-primary" %>
      <%= link_to "Back", flats_path, class: "btn btn-primary" %>
    </div>


    <hr>

    <div class="row">
      <iframe width="100%" height="300" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://maps.google.fr/maps/ms?ie=UTF8&amp;msa=0&amp;msid=101686375028251599401.0004484f73bea6145ef6b&amp;ll=<%=@flat.latitude%>,<%=@flat.longitude%>&amp;spn=0,0&amp;output=embed&amp;s=AARTsJqhzeyiqiLGEqDCDC7ar_q7Q1nmAw"></iframe>
    </div>

  </div>

</div>


